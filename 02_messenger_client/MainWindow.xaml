<Window x:Class="_02_messenger_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02_messenger_client"
        mc:Ignorable="d"
        Title="Chat" Height="450" Width="800">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <Label Margin="5" FontWeight="Bold" FontSize="20">Message :</Label>
            <Button x:Name="btnSend"
        Margin="5"
        DockPanel.Dock="Right"
        FontWeight="Bold"
        FontSize="20"
        Background="Lime"
        Padding="10"
        Click="SendButton_Click"
        >Send</Button>
            <Button x:Name="btnLeave"
        Margin="5"
        DockPanel.Dock="Right"
        FontWeight="Bold"
        FontSize="20"
        Background="Lime"
        Padding="10"
        Click="LeaveButton_Click"
        >LEAVE</Button>
            <Button Margin="5" DockPanel.Dock="Right" FontWeight="Bold" FontSize="20"
         Background="Lime" Padding="10" Click="JoinButton_Click">JOIN</Button>
            <TextBox x:Name="msgText"
         Margin="5"
         VerticalContentAlignment="Center"/>
        </DockPanel>
        <TextBlock DockPanel.Dock="Top" TextAlignment="Center"
                   FontWeight="Bold" FontSize="30">Chatik</TextBlock>
        <ListBox x:Name="list" ItemsSource="{Binding}"></ListBox>
    </DockPanel>
</Window>