<Window x:Class="_04_Mail_Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_04_Mail_Client"
        mc:Ignorable="d"
        Title="LoginWindow" Height="150" Width="440">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox x:Name="login"  Width="420" Height="30"></TextBox>
        <TextBox x:Name="password" Grid.Row="1"  Width="420" Height="30" ></TextBox>
        <Button Grid.Row="2" Click="Button_Click" Width="420" Height="30">Login</Button>

    </Grid>
</Window>
