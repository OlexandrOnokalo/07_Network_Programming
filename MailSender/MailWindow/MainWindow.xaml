<Window x:Class="MailWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" 
               FontSize="20" 
               FontWeight="Bold" 
               HorizontalContentAlignment="Center" Padding="10">From : </Label>
        <Label Grid.Row="1">To : </Label>
        <Label Grid.Row="2">Theme :</Label>
        <TextBox Name="fromTextBox" Grid.Column="1" Margin="5" 
                 VerticalContentAlignment="Center"></TextBox>
        <TextBox Name="toTextBox" Grid.Row="1" Grid.Column="1" 
                 Margin="5"></TextBox>
        <TextBox Name="themeTextBox" Grid.Row="2" Grid.Column="1" Margin="5"></TextBox>
    </Grid> 
</Window>
